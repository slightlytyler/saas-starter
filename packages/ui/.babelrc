{
  "presets": [
    ["env", {
      "modules": false,
      "targets": {
        "browsers": ["last 2 versions"],
      },
    }],
    "stage-0",
    "react",
  ],
  "env": {
    "development": {
      "plugins": [
        ["flow-runtime", {
          "annotate": true,
          "assert": true,
          "warn": true,
        }],
        "transform-flow-strip-types",
        "react-hot-loader/babel",
      ],
    },
    "production": {
      "plugins": ["transform-flow-strip-types"],
    },
  },
}
